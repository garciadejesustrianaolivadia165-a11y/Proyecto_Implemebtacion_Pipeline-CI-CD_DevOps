FROM node:18

WORKDIR /usr/src/app

# Copiar dependencias del backend
COPY Proyecto_Final_DevOps/backend/package*.json ./
RUN npm install

# Copiar código del backend
COPY Proyecto_Final_DevOps/backend/ ./

# Copiar archivos del frontend
COPY Proyecto_Final_DevOps/frontend /usr/src/frontend

EXPOSE 3000

CMD ["node", "src/app.js"]
