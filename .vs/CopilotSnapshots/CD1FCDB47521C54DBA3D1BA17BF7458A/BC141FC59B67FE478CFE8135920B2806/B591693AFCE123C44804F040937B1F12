version: "3.8"

services:

  app:
    build:
      context: ..
      dockerfile: backend/Dockerfile
    container_name: devops_app
    ports:
      - "3000:3000"
    depends_on:
      - db

  db:
    image: mongo
    container_name: mongodb
    ports:
      - "27017:27017"
    volumes:
      - dbdata:/data/db

  prometheus:
    image: prom/prometheus
    volumes:
      - ./prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - prometheus-data:/prometheus
    ports:
      - "9090:9090"

volumes:
  dbdata:
  prometheus-data:
